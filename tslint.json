{
  "extends": "tslint:recommended",
  "rules": {
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "variable-name": 
      [
        true, 
        "ban-keywords", 
        "check-format", 
        "allow-leading-underscore",
        "allow-trailing-underscore"
      ],
    "one-line": 
      [
        true, 
        "check-catch",
        "check-finally",
        "check-open-brace",
        "check-whitespace"        
      ],
    "object-literal-sort-keys": false,
    "max-line-length": false,
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "never",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
 
}
